
<div id="profile-banner" class="view">
  <div class="row d-flex justify-content-center text-center">
    <div><h2 class="display-4 font-weight-bold white-text pt-5 mb-2 whitefont">Mon profil</h2></div>
  </div>
</div>

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center activity">
                <div><h3>Mes dossiers de locations</h3></div>
                <div class="icons"><i class="fa fa-search"></i><i class="fa fa-ellipsis-h"></i></div>
            </div>
            <div class="mt-3">
                <ul class="list list-inline">
                    <% @applies.each_with_index do |apply, index| %>
                      <li class="d-flex justify-content-between">
                          <div class="d-flex flex-row align-items-center"><span class="badge badge-pill badge-primary ml-2"><%index + 1 %></span></i>
                              <div class="ml-2">
                                  <h6 class="mb-0"><%= apply.title %></h6>
                                  <div class="d-flex flex-row mt-1 text-black-50 date-time">
                                      <div><i class="far fa-calendar-alt"></i><span class="ml-2"><%= apply.expiracy_date%></span></div>
                                  </div>
                              </div>
                          </div>
                          <div class="d-flex flex-row align-items-center">
                            <div class="d-flex justify-content-between align-items-center mr-2">
                              <% if apply.rentfiles.count < 3  %>
                                <i class="fa fa-circle"></i>
                              <% else %>
                                <i class="fa fa-check-circle checkicon"></i>
                              <% end %>
                              <div class="box ml-4"><%= link_to 'Consulter', apply_path(apply) %></div>
                            </div>
                          </div>
                      </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
</div>

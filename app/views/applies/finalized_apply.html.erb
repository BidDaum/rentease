    <div class="sharing-method d-flex flex-column align-items-center bg-white rounded" style="padding: 25px; margin-right: 30px; margin-left: 40px; margin-top: auto;">
      <h3 style="font-size: 20px;">Obtenez votre lien unique</h3>
      <div id="shared-apply">
        <div style= "margin-right: 20px">
          <input type="text" value="https://res.cloudinary.com/dx3uj4h7t/image/multi/v1623778699/<%= @apply.id %>.pdf" id="myInput">
        </div>
        <div style="margin-top: 1vw justify-content-between padding: 1vw">
          <button class="bfinalized" onclick="myFunction()">Copier</button>
        </div>
      </div>

      <h3 style="font-size: 20px;">Visualisez votre dossier</h3>
      <div style="margin-top: 1vw justify-content-between padding: 1vw margin-bottom: 20px; margin-top: 20px;">
        <button class="bfinalized"><a style="#172169" href="https://res.cloudinary.com/dx3uj4h7t/image/multi/v1623778699/<%=@apply.id%>.pdf", target="_blank">Visualiser</a></button>
      </div>

      <h3 style="font-size: 20px; margin-top: 20px;">Partagez votre dossier</h3>
      <div style="margin-bottom: 20px; margin-top: 20px; margin-left:8px;" class="d-flex align-items-center">
        <div style="margin-right: 10px">
          <%= simple_form_for @apply, url: share_apply_path(@apply), method: :post do |f| %>
              <%= f.input :email%>
          <% end %>
        </div>
        <div>
          <button class="bfinalized" style="margin-top:31px;">Envoyer</button>
        </div>
      </div>
    </div>

    <div style="margin-top: 2em; margin-left: 2em;"">
      <h1 id= "pages-finalized" style="margin-bottom: 2em; text-align: left; color: #4EADAF;">Plus qu'une Ã©tape, partagez votre dossier de location!</h1>
    </div>

  </div>

  <script>
    function myFunction() {
    /* Get the text field */
    var copyText = document.getElementById("myInput");

    /* Select the text field */
    copyText.select();
    copyText.setSelectionRange(0, 99999); /* For mobile devices */

    /* Copy the text inside the text field */
    document.execCommand("copy");
  }
  </script>


<% if params[:optional].nil? %>
  <div class="container">
    <div class= "cform col-12">
      <div class="row">
        <div class="col-12">
          <% if params[:count].to_i == 0 %>
            <% @percent = 5 %>
            <% @step = "Etape 1/3" %>
          <% elsif params[:count].to_i == 1 %>
            <%  @percent = 33 %>
            <% @step = "Etape 2/3" %>
          <% elsif params[:count].to_i == 2 %>
            <% @percent = 66 %>
            <% @step = "Etape 3/3" %>
          <%  else %>
            <% @percent = 100 %>
          <% end %>
        <div>
          <p><%= @step %></p>
          <div class="progress">
            <div class="progress-bar progress-bar-striped" role="progressbar" style="width: <%= @percent %>%" aria-valuenow="<%= @percent %>" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
      </div>
            <%= simple_form_for [@apply, @rentfile] do |f|%>
              <%= f.hidden_field :name, value: @type %>
              <%= @type %>

             <div class="zone">
                <div id="dropZ">
                  <i class="fa fa-cloud-upload"></i>
                  <div>Drag and drop your file here</div>                    
                  <span>OR</span>
                  <div class="selectFile">       
                    <label for="file">Select file</label>
                    <%= f.input :photos, as: :file, label: false, input_html: { multiple: true } %>
                  </div>
                <p>File size limit : 10 MB</p>
              </div>
            </div>
              <%= f.submit "Suivant", class: "bsuivant" %>
              <button class="bsuivant" href="/../../../apply(@apply)">Précédent</button>


            <% end %>
        </div>
        <div class="col-4">
          <% if params[:count].to_i == 0 %>
            <img src= "https://media.giphy.com/media/RPrmB9N6HsMCY/giphy.gif">
          <% elsif params[:count].to_i == 1 %>
            <img src= "https://media.giphy.com/media/lptjRBxFKCJmFoibP3/giphy.gif">
          <% elsif params[:count].to_i == 2 %>
            <img src= "https://media.giphy.com/media/ddKgtZLfeIKmk/giphy.gif">
          <%  else %>
            <img src= "https://media.giphy.com/media/rQp2NiXSMG50gl0ND6/giphy.gif">
          <% end %>
        </div>
      </div>
    </div>
  </div>

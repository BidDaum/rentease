
<% if params[:optional].nil? %>
  <div class="container">
    <div class= "cform">
      <div class="row">
        <div>
          <% if params[:count].to_i == 0 %>
            <% @percent = 33 %>
            <% @step = "Etape 1/3 - Carte d'identité" %>
          <% elsif params[:count].to_i == 1 %>
            <%  @percent = 66 %>
            <% @step = "Etape 2/3 - Bulletin de salaire" %>
          <% elsif params[:count].to_i == 2 %>
            <% @percent = 90 %>
            <% @step = "Etape 3/3 - Justificatif de domicile" %>
          <%  else %>
            <% @percent = 100 %>
          <% end %>
        </div>
      </div>
          <p><%= @step %></p>
      <div class="row">
        <div class="col-12">
          <div class="progress">
            <div class="progress-bar progress-bar-striped" role="progressbar" style="width: <%= @percent %>%" aria-valuenow="<%= @percent %>" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </div>
      </div>
          <br></br>
      <div class="row align-items-center">
        <div class="col-6">
            <% if params[:count].to_i == 0 %>
              <img src= "https://media.giphy.com/media/10rbvXnxudfl5u/giphy.gif" class="gifsize">
            <% elsif params[:count].to_i == 1 %>
              <img src= "https://media.giphy.com/media/gTURHJs4e2Ies/giphy.gif" class="gifsize">
            <% elsif params[:count].to_i == 2 %>
              <img src= "https://media.giphy.com/media/5mMAGSoG4QQAo/giphy.gif" class="gifsize">
            <%  else %>
              <img src= "https://media.giphy.com/media/rQp2NiXSMG50gl0ND6/giphy.gif" class="gifsize">
            <% end %>
        </div>
        <div class="col-6">
            <%= simple_form_for [@apply, @rentfile] do |f|%>
              <%= f.hidden_field :name, value: @type %>
              <%= @type %>
               <div class="zone">
                  <div id="dropZ">
                    <i class="fa fa-cloud-upload"></i>
                    <div>Faites glisser votre document içi.</div>
                    <span>Ou</span>
                    <div class="selectFile">
                      <label for="file">Téléchargez le</label>
                      <%= f.input :photos, as: :file, label: false, input_html: { multiple: true } %>
                    </div>
                  <p>Poid limite : 10 MB</p>
                  </div>
               </div>
            <button class="bretour" href="/../../../apply(@apply)">Précédent</button>
            <%= f.submit "Suivant", class: "bsuivant" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

